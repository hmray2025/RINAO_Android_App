<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/server_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server"
            android:textSize="@dimen/uxsdk_24_dp"
            android:textStyle="bold"
            android:textColor="@color/uxsdk_black">
        </TextView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_ip_container"
            app:layout_constraintTop_toBottomOf="@id/server_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/uxsdk_14_dp">
        <EditText
            android:id="@+id/editTextIP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:cursorVisible="true"
            android:text="ws://"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/setIP" />

        <Button
            android:id="@+id/setIP"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Set IP"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/editTextIP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:enabled="false"
            android:background="@drawable/uxsdk_bg_white_radius"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/uxsdk_bg_white_radius"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server IP:"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/uxsdk_black"
            android:id="@+id/serverip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection Status:"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/uxsdk_black"
            android:id="@+id/serverconnected"/>
    </LinearLayout>
    <Button
        android:id="@+id/reconnect_ws_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/uxsdk_bg_white_radius"
        android:enabled="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="Reconnect"
        android:textColor="@color/uxsdk_black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>